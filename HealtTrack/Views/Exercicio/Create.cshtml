@model HealtTrack.Models.Exercicio

<h1 class="text-center" style="color: #3B7D8C">Adicionar Exercício</h1>

<form asp-action="Create">
    <input type="hidden" asp-for="FichaTreinoId" value="@ViewBag.FichaTreinoId" />

    <div class="form-group">
        <label asp-for="Nome" class="control-label"></label>
        <input asp-for="Nome" class="form-control" />
        <span asp-validation-for="Nome" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Descricao" class="control-label"></label>
        <textarea asp-for="Descricao" class="form-control"></textarea>
        <span asp-validation-for="Descricao" class="text-danger"></span>
    </div>
    <div class="form-group" style="padding-top: 10px;">
        <input type="submit" value="Adicionar" class="btn btn-success" /> | 
        <a type="button" class="btn btn-secondary" asp-action="Details" asp-controller="FichaTreino" asp-route-id="@ViewBag.FichaTreinoId">Voltar à Ficha de Treino</a>
    </div>
</form>

