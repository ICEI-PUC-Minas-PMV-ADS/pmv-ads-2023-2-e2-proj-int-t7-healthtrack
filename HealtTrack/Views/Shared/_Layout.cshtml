<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Healt Track</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/HealtTrack.styles.css" asp-append-version="true" />
</head>
<body>
    
    @{
        var currentAction = ViewContext.RouteData.Values["action"]?.ToString();
    }

    @if (currentAction != "Register" && currentAction != "Login")
    {
        <header>
            <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light border-bottom box-shadow mb-3" style="background: #92B0BB">
                    <div class="container-fluid">
                    <a class="navbar-brand" class="h1" style="color:aliceblue; font-size:30px; font-family:'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif" asp-area="" asp-controller="Home" asp-action="Index">Health Track</a>
                        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                            <span class="navbar-toggler-icon"></span>
                        </button>
                        <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                            <ul class="navbar-nav flex-grow-1" style="padding:10px, 10px;">
                                <li class="nav-item" style="padding:10px;">
                                <a class="nav-link text-dark, text-white btn btn-secondary"  asp-area="" asp-controller="FichaTreino" asp-action="Index">Ficha de Treino</a>
                                </li>
                            <li class="nav-item" style="padding:10px;">
                                <a class="nav-link text-dark, btn btn-secondary text-white" asp-area="" asp-controller="FichaDieta" asp-action="Index">Ficha de Dieta</a>
                            </li>
                            <li class="nav-item" style="padding:10px;">
                                <a class="nav-link text-dark, btn btn-secondary text-white" asp-area="" asp-controller="Home" asp-action="Privacy">Videos</a>
                            </li>
                            <li class="nav-item" style="padding:10px;">
                                <a class="nav-link text-dark, btn btn-secondary text-white" asp-area="" asp-controller="Todo" asp-action="Index">Tarefas</a>
                            </li>
                            <li class="nav-item" style="padding:10px;">
                                <a class="nav-link text-dark, btn btn-secondary text-white" asp-area="" asp-controller="Profile" asp-action="Index">Perfil</a>
                            </li>
                            </ul>
                        <ul class="navbar-nav">
                            @if (User.Identity.IsAuthenticated)
                            {
                                <li class="nav-item">
                                    <form method="post" asp-controller="Account" asp-action="Logout" asp-route-redirectUrl="/Account/Login">
                                        <button type="submit" class="btn btn-secondary text-white">Sair</button>
                                    </form>
                                </li>
                            }

                        </ul>

                        </div>
                    </div>
                </nav>
            </header>
    }
    <div class="container">
                <main role="main" class="pb-3">
                    @RenderBody()
                </main>
            </div>

            
            <script src="~/lib/jquery/dist/jquery.min.js"></script>
            <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
            <script src="~/js/site.js" asp-append-version="true"></script>
            @await RenderSectionAsync("Scripts", required: false)

    

</body>

</html>

