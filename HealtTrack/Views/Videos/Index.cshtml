    }

    .activeTabBtn {
        font-size: 200%;
        cursor: default;
        font-family: 'Monda-Bold', sans-serif;
        color: #3b7d8c;
    }

    .activeTabBtn::after {
        display: block;
        position: relative;
        content: "";
        background-color: black;
        height: 3px;
        animation-name: borda;
        animation-duration: 1s;
        animation-iteration-count: 1;
        animation-direction: normal;
        animation-timing-function: ease-in-out;
    }

    .desactiveTabBtn {
        position: relative;
        top: 20px;
        font-size: 100%;
    }

    .desactiveTabBtn::after {
        display: block;
        content: "";
        background-color: black;
        width: 0%;
        height: 0px;
        transition: height 0.1s ease-in-out;
    }

    .desactiveTabBtn:hover::after {
        width: 100%;
        height: 2px;
    }

    .exerciciosShow {
        display: flex;
        justify-content: center;
        align-items: center;
        gap: 20px;
        margin-top: 50px;
    }

    .exerciciosHidden {
        display: none;
    }

    .videos {
        width: 90%;
        height: 625px;
        overflow: hidden;
        overflow-y: scroll;
        overflow-x: hidden;
    }

        .videos ul li {
            display: inline;
            margin: 5px 10px 0px 0px;
            list-style-type: none;
        }

    .dietasShow {
        display: flex;
        justify-content: center;
        align-items: center;
        gap: 20px;
        margin-top: 50px;
    }

    .dietasHidden {
